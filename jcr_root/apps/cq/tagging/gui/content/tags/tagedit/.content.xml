<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        jcr:primaryType="nt:unstructured"
        jcr:title="AEM Tag Edit"
        sling:resourceType="granite/ui/components/coral/foundation/page">
        <body
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/page/body">
            <items jcr:primaryType="nt:unstructured">
                <form
                    granite:id="tag-edit-form"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form"
                    maximized="{Boolean}true"
                    method="post"
                    novalidate="{Boolean}true"
                    style="vertical">
                    <items jcr:primaryType="nt:unstructured">
                        <wizard
                            granite:class="edittag-wizard-title"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Edit Tag"
                            sling:resourceType="granite/ui/components/coral/foundation/wizard"
                            cancelHref="${empty header.Referer ? granite:concat(&quot;/libs/cq/tagging/gui/content/tags.html&quot;, granite:encodeURIPath(requestPathInfo.suffix)) : header.Referer}">
                            <items jcr:primaryType="nt:unstructured">
                                <editStep
                                    granite:class="stepsContainer"
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Edit"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <fixedColumns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            active="{Boolean}true"
                                            margin="{Boolean}true"
                                            maximized="{Boolean}true">
                                            <items jcr:primaryType="nt:unstructured">
                                                <fixedColumn1
                                                    granite:id="references"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <color
                                                            granite:class="block"
                                                            granite:id="tagcolor"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldDescription="Determines the color of tag"
                                                            fieldLabel="Color"
                                                            name="./color"
                                                            required="{Boolean}false">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <white
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="White"
                                                                    value="bg-white"/>
                                                                <grey
                                                                    jcr:primaryType="nt:unstructured"
                                                                    selected="{Boolean}true"
                                                                    text="Gray"
                                                                    value="bg-gray"/>
                                                                <blue
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Blue"
                                                                    value="bg-blue"/>
                                                            </items>
                                                        </color>
                                                    </items>
                                                </fixedColumn1>
                                            </items>
                                        </fixedColumns>
                                    </items>
                                </editStep>
                            </items>
                        </wizard>
                    </items>
                </form>
            </items>
        </body>
    </jcr:content>
</jcr:root>
